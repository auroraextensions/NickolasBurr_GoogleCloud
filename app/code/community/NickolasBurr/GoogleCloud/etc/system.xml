<config>
    <tabs>
        <nickolasburr module="googlecloud" translate="label">
            <label>Nickolas Burr Extensions</label>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
        </nickolasburr>
    </tabs>

    <sections>
        <googlecloud module="googlecloud" translate="label">
            <class>separator-top</class>
            <label>Google Cloud PHP Autoloader</label>
            <tab>nickolasburr</tab>
            <frontend_type>text</frontend_type>
            <sort_order>700</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general module="googlecloud" translate="label"><!-- General Settings -->
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <comment>
                        <![CDATA[
                        <style>
                            .columns .form-list td.version {
                                padding-left: 0px !important;
                            }
                        </style>
                        <table cellspacing="0" class="form-list">
                            <tbody>
                                <tr>
                                    <td class="label version">
                                        <label>Version</label>
                                    </td>
                                    <td class="value">1.0.0</td>
                                </tr>
                            </tbody>
                        </table>
                        ]]>
                    </comment>
                    <fields>
                        <enable_module translate="label"><!-- Enable Module -->
                            <label>Enable Google Cloud PHP Autoloader</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Autoload Google Cloud PHP libraries.</comment>
                        </enable_module>
                    </fields>
                </general>
            </groups>
        </googlecloud>
    </sections>
</config>
